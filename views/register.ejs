<% include ./partials/header.ejs %> 

  <div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
    <div class="w-[25vw] bg-white px-20 py-10 rounded-[30px]">
      <h1 class="text-3xl mb-10 tracking-tighter text-center font-semibold text-zinc-700 leading-none capitalize">Create new Account</h1>
      <form action="/register" method="post">
        <input class="block w-full border-2 rounded-md mt-2 px-3 py-2" type="text" name="username" placeholder="username">
        <input class="block w-full border-2 rounded-md mt-2 px-3 py-2" type="text" name="fullname" placeholder="full name">
        <input class="block w-full border-2 rounded-md mt-2 px-3 py-2" type="email" name="email" placeholder="email">
        <input class="block w-full border-2 rounded-md mt-2 px-3 py-2" type="number" name="contact" placeholder="contact">
        <input class="block w-full border-2 rounded-md mt-2 px-3 py-2" type="password" name="password" placeholder="password">
        <input class="block w-full border-2 rounded-full mt-5 px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Register">
        <p class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center">
          By continuing, you agree to Pinterest's Terms of Service. Opens a new tab and acknowledge you've read our Privacy Policy Notice at collection.
        </p>
      </form>
      <a class="inline-block mt-7 text-sm w-full text-center font-semibold text-zinc-700" href="/">Login existing account</a>
    </div>
    </div>



